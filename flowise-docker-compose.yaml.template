version: '3'

services:
  # ВАЖНО: При обновлении версии Flowise возможны ошибки миграции БД!
  # Если база не содержит важных данных, рекомендуется очищать volume Postgres:
  # docker-compose down
  # sudo rm -rf /path/to/your/postgres/volume/data/*
  # docker-compose up -d
  # Это позволит избежать ошибок типа "column ... does not exist" при запуске новой версии.
  flowise:
    image: flowiseai/flowise
    restart: unless-stopped
    container_name: flowise
    environment:
      - PORT=${FLOWISE_PORT}
      - HOST=${FLOWISE_HOST}
      - FLOWISE_USERNAME=${FLOWISE_USERNAME}
      - FLOWISE_PASSWORD=${FLOWISE_PASSWORD}
      - DATABASE_TYPE=${FLOWISE_DATABASE_TYPE}
      - DATABASE_HOST=${FLOWISE_DATABASE_HOST}
      - DATABASE_PORT=${FLOWISE_DATABASE_PORT}
      - DATABASE_NAME=${FLOWISE_DATABASE_NAME}
      - DATABASE_USER=${FLOWISE_DATABASE_USER}
      - DATABASE_PASSWORD=${FLOWISE_DATABASE_PASSWORD}
      - QDRANT_HOST=${FLOWISE_QDRANT_HOST}
      - QDRANT_PORT=${FLOWISE_QDRANT_PORT}
      - QDRANT_API_KEY=${QDRANT_API_KEY}
      - LOG_LEVEL=${FLOWISE_LOG_LEVEL}
      - DEBUG=${FLOWISE_DEBUG}
    volumes:
      - flowise_data:/root/.flowise
    networks:
      - app-network

networks:
  app-network:
    external: true

volumes:
  flowise_data:
    external: true